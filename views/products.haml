:ruby
  products = PRODUCTS.select{ |p| p[:cat] == @category.to_sym }

%a.btn{ href: "/shop" } < indietro

%section
  .right
    .box
      %h1 #{ t "Products in:",  "Prodotti nella categoria:" } #{@category.humanize.upcase}
      %section.products
        %nav
          - for product in products
            - @product = product
            = haml :"_product"
            
          
  .left
    = haml :"_categories"
  